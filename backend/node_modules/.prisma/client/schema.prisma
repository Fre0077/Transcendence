generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model messages {
  id      Int      @id @default(autoincrement())
  chat    Int
  message String
  date    DateTime @default(now())
}

model chats {
  id      Int    @id @default(autoincrement())
  name    String
  members String
}

